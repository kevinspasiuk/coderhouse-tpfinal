<h3> Chat </h3>
<div class="container">
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card chat-app">
            <div class="chat">

                <div class="chat-history">
                    <ul class="m-b-0">
                        
                        {{#each mensajes}}
                        <li class="clearfix">
                            <div class="message-data">
                                <span class="message-data-time">{{this.dateTime}}, por: {{this.author}} </span>
                            </div>
                            <div class="message my-message">{{this.message}}</div>                                    
                        </li>                               
                        {{/each}}
                    </ul>
                </div>
                <div class="chat-message clearfix">
                    <div class="input-group mb-0">
                        <form onsubmit="return agregarMensaje(this)">
  
                          <div class="form-group">
                            <label for="author">Tu email:</label>
                            <input type="text" class="form-control" id="author" name="author" placeholder="Ejemplo@gmail.com" aria-describedby="emailHelp" required>
                          </div>

                          <div class="form-group mb-3">
                            <label for="message">Mensaje:</label>
                            <input type="text" class="form-control" id="message" name="message" placeholder="Tu mensaje" required>
                          </div>

                          <button type="submit" class="btn btn-primary">Enviar</button>

                        </form>                                   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

